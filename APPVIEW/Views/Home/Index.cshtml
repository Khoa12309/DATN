                            </ul>
                        </div>
                        <div class="card-body">
                            <p>Accessories</p>
                            <h4 class="card-product__title"><a href="single-product.html">Quartz Belt Watch</a></h4>
                            <p class="card-product__price">Name : @item.Name</p>
                            <p class="card-product__price">Price : @item.Price</p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
