@model APPDATA.Models.Color

@{
    ViewData["Title"] = "Edit-Color";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4 class="py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Edit a Color</h5>

            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div class="row mb-3">
                        <label asp-for="Name" class="col-sm-2 col-form-label">Name Color</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Name" placeholder="Enter name of Color" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Colorcode" class="col-sm-2 col-form-label">Name Color</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Colorcode" placeholder="Enter Color code" />
                            <span asp-validation-for="Colorcode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Status" class="col-sm-2 col-form-label">Status</label>
                        <div class="col-sm-10 offset-sm-2">
                            <div class="form-check">
                                <input asp-for="Status" name="status" class="form-check-input" checked type="radio" value="1" id="defaultRadio1" />
                                <label class="form-check-label" asp-for="Status"> Use </label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Status" name="status" class="form-check-input" type="radio" value="0" id="defaultRadio2" />
                                <label class="form-check-label" for="defaultRadio2"> Not Use </label>
                            </div>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">
                                <span class="mdi mdi-check-outline"></span> Save Change
                            </button>
                            <div class="btn-group ms-2">
                                <a href="#" class="btn btn-danger waves-effect waves-light" onclick="goBack()">
                                    <span class="mdi mdi-close"></span> Cancel
                                </a>
                                <script>
                                    function goBack() {
                                        window.history.back();
                                    }
                                </script>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

