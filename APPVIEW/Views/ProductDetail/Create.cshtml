<h1>Create</h1>

<h4>ProductDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="Id_Category" class="control-label"></label>               
                <select asp-for="Id_Category" class="selectpicker form-control" aria-label="size 3 select example" onchange="addToList()">
                    @{
                        if (ViewBag.Category != null)
                        {
                            foreach (var item in ViewBag.Category)
                            {
                                <option value="@item.Id.ToString()"> @item.Name</option>
                            }
                        }
                    }
                </select>
             
                <span asp-validation-for="Id_Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Size" class="control-label"></label>
                <select asp-for="Id_Size" class="selectpicker form-control" aria-label="size 3 select example" onchange="addToList()">
                    @{
                        if (ViewBag.Size != null)
                        {
                            foreach (var item in ViewBag.Size)
                            {
                                <option value="@item.Id.ToString()"> @item.Name</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="Id_Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Product" class="control-label"></label>
                <select asp-for="Id_Product" class="selectpicker form-control"  aria-label="size 3 select example" onchange="addToList()">

                    @{
                        if (ViewBag.Product != null)
                        {
                            foreach (var item in ViewBag.Product)
                            {
                                <option value="@item.Id.ToString()"> @item.Name</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="Id_Product" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Material" class="control-label"></label>
                <select asp-for="Id_Material" id="color" class="selectpicker form-control" aria-label="size 3 select example" onchange="addToList()">

                    @{
                        if (ViewBag.Material != null)
                        {
                            foreach (var item in ViewBag.Material)
                            {
                                <option value="@item.Id.ToString()"> @item.Name</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="Id_Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Color" class="control-label"></label>
                <select asp-for="Id_Color" id="color" class="selectpicker form-control"  aria-label="size 3 select example" onchange="addToList()">
                    
                    @{
                        if (ViewBag.Color != null)
                        {
                            foreach (var item in ViewBag.Color)
                            {
                            <option value="@item.Id.ToString()"> @item.Name</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="Id_Color" class="text-danger"></span>
                <a class="btn btn-outline-primary"href="~/Color/create">Thêm màu</a>
              
            </div>                      
            <input type="hidden"  name="myList" id="myList">
            <div class="form-group">
                <label asp-for="Id_supplier" class="control-label"></label>
                <select asp-for="Id_supplier" id="color" class="selectpicker form-control" aria-label="size 3 select example" onchange="addToList()">

                    @{
                        if (ViewBag.Supplier != null)
                        {
                            foreach (var item in ViewBag.Supplier)
                            {
                                <option value="@item.Id.ToString()"> @item.Name</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="Id_supplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desciption" class="control-label"></label>
                <input asp-for="Desciption" class="form-control" />
                <span asp-validation-for="Desciption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
                                            
            <div class="form-group">
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Chọn ảnh từ Máy tính</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="imageFile" multiple>
                </div>               
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" onclick="passdata()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
