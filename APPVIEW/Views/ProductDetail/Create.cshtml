<script>
    let myList;

    function addToList() {
        let input = document.getElementById("color").value;
        const selectedValues = Array.from(event.target.selectedOptions, option => option.value);
        myList=selectedValues;       
        document.getElementById("myList").value = JSON.stringify(selectedValues)              
    }
   
    function passdata() {        
        document.getElementById("myList").value = JSON.stringify(myList)
        document.forms[0].submit();
    }
   
}
   
</script>
